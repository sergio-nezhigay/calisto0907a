                  </svg>
                </span>
              </div>
              <div class="product_indicator text_image_gray indicator__content-{{ forloop.index }}">
                {% if  item.settings.product_indicator_icon != blank %}<span class="indicator_icon"><img src="{{ item.settings.product_indicator_icon | image_url }}" alt="{{ product_indicator_text }}" width="auto" height="37px"></span>{% endif %}
                {% if  item.settings.product_indicator_text != blank %}<span class="indicator_text">{{ item.settings.product_indicator_text }}</span>{% endif %}
              </div>
            {%- endif -%}
          {%- endfor -%}
          </div>
          {%- endif -%}
        {%- endcapture -%}

        {%- if forloop.first -%}

            <div class="header__body">
              <div class="heading__wrapper">
                <h2 class="main_title"> {% if page_title != blank %}{{ page_title }} {% else %}{{ page.title }}{% endif %}</h2>
                {%- if product_indicator_icon != blank or product_indicator_text != blank -%}

                  {{ productindicator }}
                  
                {%- endif -%}
              </div>
              {%- if header_discount_code_text != blank-%}
              <div class="heading__discount__text">
                <h4>{{ header_discount_code_text }}</h4>
              </div>
              {%- endif -%}
            </div>
        {%- else -%}
          {{ productindicator }}
        {%- endif -%}

        {%- if first_3d_model -%}
          <link
            id="ModelViewerStyle"
            rel="stylesheet"
            href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
            media="print"
            onload="this.media='all'"
          >
        {%- endif -%}

        <div
          class="m-main-product--wrapper m:flex m:flex-wrap{% if image_placement == 'right' %} md:m:flex-row-reverse{% endif %}"
          data-view="featured-product"
          style="--column-gap: {{ section.settings.column_gap }}px; --column-gap-mobile: {{ section.settings.column_gap_mobile }}px;"
        >
          <div class="m:column m:w-full m-main-product--media m:w-full md:m:w-1/2">
            {% unless section_onboarding %}
              {% render 'product-media',
                section: section,
                media_layout: 'layout-4',
                product: product,
                show_thumbnails: show_thumbnails
              %}
            {% else %}
              <div
                class="{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}"
                style="--aspect-ratio: 1/1;"
              >
                {{ 'product-1' | placeholder_svg_tag: 'm-placeholder-svg m:object-cover' }}
              </div>
            {% endunless %}

            {%- if forloop.last -%}
