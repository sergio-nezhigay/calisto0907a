              <div class="m-product-info-content">
                <div class="main-product__block main-product__block-title">
                  <h2 class="m-product-title">
                    <a href="{{ product.url }}">
                      {% unless section_onboarding %}
                        {{ product.title }}
                      {% else %}
                        {{ 'homepage.onboarding.product_title' | t }}
                      {% endunless %}
                    </a>
                  </h2>
                </div>
                <div class="main-product__block main-product__block-price">
                  {% unless section_onboarding %}
                    {% render 'product-prices',
                      price_text_size: 'm:text-xl md:m:text-2xl',
                      product: product,
                      use_variant: true
                    %}
                  {% else %}
                    <span class="m:text-xl md:m:text-2xl">
                      {{ 1999 | money }}
                    </span>
                  {% endunless %}
                </div>
              </div>


              {% unless section_onboarding %}
                <div class="main-product__block main-product__block-rating">
                  {% render 'product-reviews-app__badge' %}
                </div>
  
                <div class="material__wrapper">
                {%- for i in (1..3) -%}
                  {% capture info_icon %}info_icon_{{i}}{% endcapture %}
                  {% capture info_title %}info_title_{{i}}{% endcapture %}
                  {% capture info_content %}info_content_{{i}}{% endcapture %}
                  {%- if block.settings[info_title] != blank -%}
                  <div class="material__wrapper__container">
                    {% if block.settings[info_icon] != blank %}
                    <div class="material_icon">
                      <img src="{{ block.settings[info_icon] | image_url }}" alt="{{ block.settings[info_title] }}" width="40" height="40" />
                    </div>
                    {% endif %}
                    <div class="material_text_wrapper">
                      <h5 class="material_title">{{ block.settings[info_title] }}</h5>
                      <span class="material_content">{{ block.settings[info_content] }}</span>
                    </div>
                  </div>
                  {%- endif -%}
                {%- endfor -%}
                </div>
              {% else %}
                <div class="main-product__block main-product__block-description">
                  <div class="m-product-description">
                    {{ 'homepage.onboarding.product_description' | t }}
                  </div>
                </div>
              {% endunless %}

              {% unless section_onboarding %}
                {% render 'product-form',
                  section_id: block.id,
                  product: product,
                  section: block,
                  product_form_id: product_form_id,
                  product_form_class: product_form_class,
                  current_variant: current_variant,
                  show_quantity_selector: section.settings.show_quantity_selector
                %}

                  {%- if forloop.first -%}

                    <div class="footer__body">
                      {%- if bottom_saving_message != blank-%}
                      <div class="footer__discount__text">
                        <span>{{ bottom_saving_message }}</span>
                      </div>
                      {%- endif -%}

                      {% if scroll_text != blank %}
                      <div class="bottom_scroll">
