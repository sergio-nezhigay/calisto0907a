            <div class="m-product-info--wrapper m:text-color-body{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
              {% comment %}
              {% if enable_review_icon %}
                <div class="m-product-reviews-icon">
                  <a href="#" aria-label="Review icon" class="review_scroll">
                  <span><svg xmlns="http://www.w3.org/2000/svg" width="115" height="18" viewBox="0 0 115 18" fill="none">
