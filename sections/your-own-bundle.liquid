{{ 'product.css' | asset_url | stylesheet_tag }}
{{ 'your-own-bundle.css' | asset_url | stylesheet_tag }}

<div class="bundle--wrapper--container">

  {%- liquid 
    assign container = section.settings.container
    if container == 'w-full'
      assign container = 'container-full'
    endif
    assign show_thumbnails = section.settings.show_thumbnails
    assign image_placement = section.settings.image_placement

    assign animation_effect = settings.animations
    assign animated = false
    if animation_effect != 'none'
      assign animated = true
      if section.settings.animations != 'inherit'
        assign animation_effect = section.settings.animations
      endif
    endif

    assign breadcrumb_justify = 'start'


    assign page_title = section.settings.page_title
    assign header_discount_code_text = section.settings.header_discount_code_text
    assign bottom_saving_message = section.settings.bottom_saving_message
    assign scroll_text = section.settings.scroll_text
  -%}

  {% capture class %}
    {% if section.settings.show_quantity_selector %}
      show_quantity_selector
    {% else %}
      hide_quantity_selector
    {% endif %}
  {% endcapture %}

  {%- capture separator -%}
      <span aria-hidden="true" class="m-breadcrumb--separator">
        <!-- <svg class="m-svg-icon--small m-rlt-reverse-x" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512"><path d="M17.525 36.465l-7.071 7.07c-4.686 4.686-4.686 12.284 0 16.971L205.947 256 10.454 451.494c-4.686 4.686-4.686 12.284 0 16.971l7.071 7.07c4.686 4.686 12.284 4.686 16.97 0l211.051-211.05c4.686-4.686 4.686-12.284 0-16.971L34.495 36.465c-4.686-4.687-12.284-4.687-16.97 0z"/></svg> -->
        /
      </span>
  {%- endcapture -%}
  
  {%- capture home -%}
      <a href="{{ routes.root_url }}" class="m-breadcrumb--item" title="{{ 'general.breadcrumbs.home_link_title' | t }}">
          {{ 'general.breadcrumbs.home' | t }}
      </a>
  {%- endcapture -%}
  {%- capture productname -%}
    {%- assign pro_title = ""  -%}
    {%- for block in section.blocks -%}
      {%- assign productdetails = block.settings.featured_product -%}
      {%- assign pro_title = pro_title | append: productdetails.title -%}
      {% unless forloop.last %}{% assign pro_title = pro_title | append: " with " %}{% endunless %}
    {%- endfor -%}
    {{ pro_title }}
  {%- endcapture -%}

  {% unless template == 'index' %}
    <nav
      class="m-breadcrumb m:w-full"
      role="navigation"
      aria-label="breadcrumbs"
    >
      <div class="{{ container }}">
        <div class="m-breadcrumb--wrapper m:flex m:items-center m:justify-{{ breadcrumb_justify | default: 'start' }}">
            {{ home }}
  
          {% if template.name == 'product' %}
            {% liquid
              assign current_collection = null
              if collection
                assign current_collection = collection
              elsif product and product.collections.size > 0
                assign current_collection = product.collections.first
              endif
            %}
            {% if current_collection %}
              {{ separator }}
              {% if current_collection.handle %}
                {% capture url %}/collections/{{ current_collection.handle }}{% endcapture %}
                <a href="{{ url }}" class="m-breadcrumb--item">{{ current_collection.title }}</a>
              {% endif %}
            {% endif %}
            {% unless hide_current == true %}
              {{ separator }}
              <span class="m-breadcrumb--item-current m-breadcrumb--item">{{ product.title }}</span>
            {% endunless %}
          {% elsif template.name == 'collection' and collection.handle %}
            {{ separator }}
            {% if current_tags %}
              {% capture url %}{{ routes.collections_url }}/{{ collection.handle }}{% endcapture %}
              <a href="{{ url }}" class="m-breadcrumb--item">{{ collection.title }}</a>
              {{ separator }}
              <span class="m-breadcrumb--item m-breadcrumb--item-current">{{ current_tags | join: ' + ' }}</span>
            {% else %}
              <span class="m-breadcrumb--item m-breadcrumb--item-current">{{ collection.title }}</span>
            {% endif %}
  
          {% elsif template.name == 'blog' %}
            {{ separator }}
            {% if current_tags %}
              <a href="{{ blog.url }}" class="m-breadcrumb--item">{{ blog.title }}</a>
              {{ separator }}
              <span class="m-breadcrumb--item m-breadcrumb--item-current">{{ current_tags | join: ' + ' }}</span>
            {% else %}
              <span class="m-breadcrumb--item-current m-breadcrumb--item">{{ blog.title }}</span>
            {% endif %}
  
          {% elsif template == 'article' %}
            {{ separator }}
            <a href="{{ blog.url }}" class="m-breadcrumb--item">{{ blog.title }}</a>
  
          {% elsif template contains 'page' %}
            {{ separator }}
            <span class="m-breadcrumb--item-current m-breadcrumb--item">{{ page.title }}</span>
          
          {% endif %}

          {%- if productname != blank -%}
            {{ separator }}
            <span class="m-breadcrumb--item-current m-breadcrumb--item">{{ productname }}</span>
          {%- endif -%}
        </div>
      </div>
    </nav>
  {% endunless %}

  
  <div
    id="m-featured-product-{{ section.id }}"
    data-section-id="{{ section.id }}"
    class="m-section m-featured-product {{ section.settings.custom_class }} {{ class | strip_newlines }}"
  >
    <div class="{{ container }} m-section-my">
      
      {%- for block in section.blocks -%}

        {%- liquid
        
            assign product = block.settings.featured_product
            assign first_3d_model = product.media | where: 'media_type', 'model' | first
            assign product_form_id = 'product-form-' | append: block.id
            assign product_form_class = 'product-form-' | append: block.id

            if product == empty
              assign section_onboarding = true
            endif
            assign current_variant = product.selected_or_first_available_variant

            
            assign product_indicator_icon = block.settings.product_indicator_icon
            assign product_indicator_text = block.settings.product_indicator_text
            assign enable_review_icon = block.settings.enable_review_icon
      
        -%}

        {%- capture productindicator -%}
          {%- if product_indicator_icon != blank or product_indicator_text != blank -%}
          <div class="product_indicator_wrapper">
          {%- for item in section.blocks -%}
            {%- if product_indicator_icon == item.settings.product_indicator_icon -%}
              <div class="product_indicator indicator__content-{{ forloop.index }}">
                {% if  product_indicator_icon != blank %}<span class="indicator_icon"><img src="{{ product_indicator_icon | image_url }}" width="auto" height="37px" alt="{{ product_indicator_text }}"></span>{% endif %}
                {% if  product_indicator_text != blank %}<span class="indicator_text">{{ product_indicator_text }}</span>{% endif %}
              </div>
